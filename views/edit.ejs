<% layout("./layout/boilerplate.ejs") %>
<body>
  <div class="container mt-5">
    <form
      method="post"
      action="http://localhost:8080/listing/<%= user._id %>?_method=PATCH"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input
          type="text"
          class="form-control"
          id="title"
          name="listing[title]"
          value="<%= user.title %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea
          class="form-control"
          id="description"
          name="listing[description]"
          rows="3"
          required
        >
<%= user.description %></textarea
        >
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price:</label>
        <input
          type="number"
          class="form-control"
          id="price"
          name="listing[price]"
          value="<%= user.price %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input
          type="text"
          class="form-control"
          id="location"
          name="listing[location]"
          value="<%= user.location %>"
          required
        />
      </div>
      <div class="mb-3">
        <label for="country" class="form-label">Country:</label>
        <input
          type="text"
          class="form-control"
          id="country"
          name="listing[country]"
          value="<%= user.country %>"
          required
        />
      </div>
      <button type="submit" class="btn btn-black">Submit</button>
    </form>
  </div>
</body>
